    }
  },

  "login": {
    "props": {
      //"optionsTitle": "Elija una de las opciones para confirmar su identidad",
      // "providerPasswordButtonLabel": "Ingresar con mail y contraseña",
      "showIconProfile": true,
      "hideIconLabel": true,
      "labelClasses": "login__header",
      "accountOptionLinks": [
        {
          "label": "Meus Dados",
          "path":"/account",
          "cssClass": ["login-link"]
        },
        {
          "label": "Meus pedidos",
          "path": "/account#/orders",
          "cssClass": ["login-link"]
        },
        {
          "label": "Alterar senha",
          "path": "/account#/authentication",
          "cssClass": ["login-link"]
        }
      ]
      /* "accountOptionLinks": [
                  {
                      "label": "Mi Cuenta",
                      "path": "/account",
                      "cssClass": "myAccountLink"
                  },                {
                      "label": "Mis Pedidos",
                      "path": "/account#/orders",
                      "cssClass": "myAccountLink"
                  }
              ] */
    }
  },
  "logo#mobile": {
    "props": {
      // "title": "Logo",
      "href": "/",
      "url": "assets/icons/logo.png",
      "width": "144"
    }
  },

  "autocomplete-result-list.v2": {
    "props": {
      "productLayout": "VERTICAL",
      "maxSuggestedProducts": 1
    },
    "blocks": ["product-summary.shelf"]
  },

  "product-summary.shelf#search": {
    "props": {
      "blockClass": ["search-shelf"]
    },
    "children": [
      "product-summary-name#search",
      "product-summary-image#shelf",
      "product-summary-price#search",
      "product-summary-buy-button#search"
    ]
  },

  "product-summary-image#shelf": {
    "props": {
      "showBadge": true,
      "aspectRatio": "1:1",
      "maxHeight": 220,
      "badgeText": "off"
    }
  },

  "product-summary-price#search": {
    "props": {
      "showInstallments": false
    }
  },

  "product-summary-buy-button#search": {
    "props": {
      "buyButtonText": "comprar"
    }
  },

  "product-summary-name#search": {
    "props": {
      "blockClass": ["search"]
    }
  },

  "search-bar": {
    "blocks": ["autocomplete-result-list.v2"],
    "props": {
      "productLayout": "VERTICAL",
      "iconClasses": "hpa-search",
      "placeholder": "Busca",
      "displayMode": "search-and-clear-buttons",
      "autocompleteAlignment": "left",
      "openAutocompleteOnFocus": true
    }
  }
}
