{
  "header": {
    "blocks": ["header-layout.desktop", "header-layout.mobile"]
  },
  "header.full": {
    "blocks": ["header-layout.desktop", "header-layout.mobile"]
  },
  "header-layout.desktop": {
    "children": ["CSSWorkaround","sticky-layout.stack-container#header"]
  },
  "sticky-layout.stack-container#header": {
    "props": {
      "position": "top"
    },
    "children": [
      "sticky-layout#links-menu"
    ]
  },

  "sticky-layout#links-menu":{
    "children":[
      "header-row#1-desktop",
      "header-row#new-desktop",
      "flex-layout.row#mega-menu"
  ]
  },
  "header-row#1-desktop": {
    "children": [
      "logo#desktop",
      "mega-menu-trigger-btn",
      "vtex.menu@2.x:menu#category-menu-01",
      "search-bar",
      "login",
      "minicart.v2"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },
  "header-row#new-desktop": {
    "children": [
      "logo#desktop",
      "mega-menu-trigger-btn",
      "vtex.menu@2.x:menu#category-menu-01",
      "search-bar",
      "login",
      "minicart.v2"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },
  "mega-menu-trigger-btn":{
    "props":{
      // "id":"hpa-hamburguer-menu",
      "text": "Todas as Categorias"
    }
  },

  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "assets/icons/logo.png",
      "width": "165",
      "height": "53"
    }
  },
